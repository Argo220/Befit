
@model BeFit.Models.ExerciseType
@{ ViewData["Title"] = "Szczegóły"; }
<h2>Szczegóły</h2>
<dl class="row">
    <dt class="col-sm-3">Nazwa</dt>
    <dd class="col-sm-9">@Model.Name</dd>
    <dt class="col-sm-3">Opis</dt>
    <dd class="col-sm-9">@Model.Description</dd>

</dl>
<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
    <a class="btn btn-secondary" asp-action="Index">Powrót</a>
</p>
