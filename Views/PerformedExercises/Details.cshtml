
@model BeFit.Models.PerformedExercise
@{ ViewData["Title"] = "Szczegóły"; }
<h2>Szczegóły</h2>
<dl class="row">
    <dt class="col-sm-3">Sesja</dt>
    <dd class="col-sm-9">@Model.TrainingSessionId</dd>
    <dt class="col-sm-3">Typ ćwiczenia</dt>
    <dd class="col-sm-9">@Model.ExerciseTypeId</dd>
    <dt class="col-sm-3">Obciążenie</dt>
    <dd class="col-sm-9">@Model.LoadKg</dd>
    <dt class="col-sm-3">Serii</dt>
    <dd class="col-sm-9">@Model.Sets</dd>
    <dt class="col-sm-3">Powtórzeń/serię</dt>
    <dd class="col-sm-9">@Model.RepsPerSet</dd>

</dl>
<p>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a>
    <a class="btn btn-secondary" asp-action="Index">Powrót</a>
</p>
