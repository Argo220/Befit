
@model IEnumerable<BeFit.Models.PerformedExercise>
@{ ViewData["Title"] = "Moje ćwiczenia"; }
<h2>@ViewData["Title"]</h2>
<p><a class="btn btn-primary" asp-action="Create">Dodaj</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Sesja</th>
            <th>Ćwiczenie</th>
            <th>Obciążenie</th>
            <th>Serii</th>
            <th>Powtórzeń/serię</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TrainingSession?.StartTime</td>
            <td>@item.ExerciseType?.Name</td>
            <td>@item.LoadKg</td>
            <td>@item.Sets</td>
            <td>@item.RepsPerSet</td>
            <td>
                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
    }
    </tbody>
</table>
