
@using Microsoft.AspNetCore.Identity
<!doctype html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>BeFit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" asp-controller="Home" asp-action="Index">BeFit</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav" aria-controls="nav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="nav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item"><a class="nav-link" asp-controller="ExerciseTypes" asp-action="Index">Typy ćwiczeń</a></li>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <li class="nav-item"><a class="nav-link" asp-controller="TrainingSessions" asp-action="Index">Moje sesje</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="PerformedExercises" asp-action="Index">Moje ćwiczenia</a></li>
            <li class="nav-item"><a class="nav-link" asp-controller="Stats" asp-action="Index">Statystyki</a></li>
        }
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Administracja</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" asp-controller="ExerciseTypes" asp-action="Create">Dodaj typ ćwiczenia</a></li>
                    <li><a class="dropdown-item" asp-controller="ExerciseTypes" asp-action="Index">Zarządzaj typami ćwiczeń</a></li>
                </ul>
            </li>
        }
      </ul>
      <ul class="navbar-nav">
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <li class="nav-item"><span class="navbar-text">Witaj, @User.Identity!.Name</span></li>
            <li class="nav-item"><form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="/">
                <button class="btn btn-outline-light ms-2" type="submit">Wyloguj</button>
            </form></li>
        }
        else
        {
            <li class="nav-item"><a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">Zaloguj</a></li>
            <li class="nav-item"><a class="btn btn-light ms-2" asp-area="Identity" asp-page="/Account/Register">Rejestracja</a></li>
        }
      </ul>
    </div>
  </div>
</nav>
<div class="container mt-3">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
