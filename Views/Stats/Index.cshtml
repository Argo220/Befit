
@model IEnumerable<BeFit.Models.Stats.ExerciseStatsRow>
@{ ViewData["Title"] = "Statystyki (ostatnie 4 tygodnie)"; }
<h2>@ViewData["Title"]</h2>
@if (!Model.Any())
{
    <p>Brak danych do wyświetlenia.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ćwiczenie</th>
                <th>Ile razy wykonywane</th>
                <th>Łącznie powtórzeń</th>
                <th>Średnie obciążenie (kg)</th>
                <th>Maksymalne obciążenie (kg)</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var row in Model)
        {
            <tr>
                <td>@row.ExerciseName</td>
                <td>@row.TimesPerformed</td>
                <td>@row.TotalReps</td>
                <td>@(row.AvgLoad?.ToString("0.##") ?? "-")</td>
                <td>@(row.MaxLoad?.ToString("0.##") ?? "-")</td>
            </tr>
        }
        </tbody>
    </table>
}
